{
  "name": "project-jade-garden",
  "type": "module",
  "private": true,
  "workspaces": {
    "packages": [
      "docs",
      "packages/*",
      "scripts"
    ],
    "catalog": {
      "@biomejs/biome": "2.3.2",
      "clean-package": "2.2.0",
      "globby": "15.0.0",
      "typescript": "5.9.3"
    },
    "catalogs": {
      "ark": {
        "@ark-ui/react": "5.27.0",
        "@ark-ui/solid": "5.27.0",
        "@ark-ui/svelte": "5.12.0",
        "@ark-ui/vue": "5.27.0"
      },
      "jg": {
        "@jade-garden/cli": "0.2.4",
        "jade-garden": "2.0.5"
      },
      "sb": {
        "@storybook/addon-a11y": "10.0.2",
        "@storybook/addon-themes": "10.0.2",
        "@storybook/react-vite": "10.0.2",
        "@storybook/sveltekit": "10.0.2",
        "@storybook/vue3-vite": "10.0.2",
        "storybook": "10.0.2"
      },
      "tw": {
        "@tailwindcss/vite": "4.1.16",
        "tailwindcss": "4.1.16"
      },
      "vite": {
        "vite": "7.1.12",
        "vite-plugin-dts": "4.5.4",
        "vite-tsconfig-paths": "5.1.4"
      }
    }
  },
  "scripts": {
    "postinstall": "lefthook install",
    "fresh": "bun clean && bun i && bun typecheck",
    "docs": "bun run --cwd docs",
    "pkg:design": "bun run --cwd packages/design",
    "pkg:react": "bun run --cwd packages/react",
    "pkg:solid": "bun run --cwd packages/solid",
    "pkg:svelte": "bun run --cwd packages/svelte",
    "pkg:vue": "bun run --cwd packages/vue",
    "scripts": "bun run --cwd scripts",
    "build": "turbo run build --filter='!./docs/**'",
    "clean": "turbo run clean && rm -rf .turbo node_modules",
    "dev": "turbo run dev --filter='!./docs/**'",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "version": "changeset version && bun update",
    "release": "turbo run prepub && for dir in packages/*; do (cd \"$dir\" && bun publish || true); done && changeset tag && turbo run postpub"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@changesets/config": "3.1.1",
    "@types/bun": "1.3.1",
    "lefthook": "2.0.2",
    "turbo": "2.6.0",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.1",
  "trustedDependencies": [
    "@biomejs/biome",
    "lefthook"
  ],
  "patchedDependencies": {
    "@internationalized/number@3.6.5": "patches/@internationalized%2Fnumber@3.6.5.patch"
  }
}
