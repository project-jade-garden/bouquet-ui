{
  "name": "@bouquet-ui/react",
  "version": "0.0.1",
  "description": "A lovely arrangement of React components built with Ark UI, Jade Garden, and Tailwind CSS",
  "keywords": [
    "bouquet-ui",
    "ark-ui",
    "react",
    "ui",
    "design-system",
    "themes",
    "react-components",
    "uikit",
    "accessible",
    "components",
    "tailwindcss",
    "tailwind",
    "jade-garden"
  ],
  "author": "Gregory Salinas <ags1130@yahoo.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/project-jade-garden/bouquet-ui.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/project-jade-garden/bouquet-ui/issues"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "build": "bun typecheck && vite build",
    "clean": "rm -rf .turbo dist node_modules",
    "dev": "bun run storybook",
    "format": "biome format --write .",
    "lint": "biome lint",
    "postpub": "clean-package restore",
    "prepub": "clean-package",
    "storybook": "storybook dev -p 6001",
    "typecheck": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "dependencies": {
    "@ark-ui/react": "catalog:ark"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@bouquet-ui/design": "workspace:",
    "@storybook/addon-a11y": "catalog:sb",
    "@storybook/addon-themes": "catalog:sb",
    "@storybook/react-vite": "catalog:sb",
    "@tailwindcss/vite": "catalog:tw",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "5.1.0",
    "clean-package": "catalog:",
    "image-conversion": "2.1.1",
    "globby": "catalog:",
    "jade-garden": "catalog:jg",
    "lucide-react": "0.552.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "7.66.0",
    "react-shadow": "20.6.0",
    "react-use": "17.6.0",
    "storybook": "catalog:sb",
    "tailwindcss": "catalog:tw",
    "typescript": "catalog:",
    "vite": "catalog:vite",
    "vite-plugin-dts": "catalog:vite",
    "vite-tsconfig-paths": "catalog:vite"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  }
}
